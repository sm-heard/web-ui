{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "declaration": false,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2019",
        ],
        "moduleResolution": "node",
        "module": "esnext",
        "target": "es2017",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "jsx": "react",
        "jsxFactory": "h",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "types/jsx.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}